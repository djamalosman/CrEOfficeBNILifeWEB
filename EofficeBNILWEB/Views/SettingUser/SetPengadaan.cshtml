                                        <th>@(en != null ? "Max Nominal" : "Max Nominal")</th>
                                        <th>@(en != null ? "Persetujuan 1 " : "Persetujuan 1")</th>
                                        <th>@(en != null ? "Persetujuan 2 " : "Persetujuan 2")</th>
                                        <th>@(en != null ? "Status" : "Status")</th>                                        
                                        <th>@(en != null ? "Action" : "Aksi")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <!--End::Main Portlet-->
            </div>
        </div>
    </div>
</div>

